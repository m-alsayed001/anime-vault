{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "components/Motion.jsx",
    "components/LoadMore.jsx",
    "components/Hero.jsx",
    "components/Footer.jsx",
    "components/AnimeCard.jsx",
    "app/page.jsx",
    "app/layout.jsx",
    "app/action.jsx",
    "app/_data.js"
  ],
  "exclude": [
    "node_modules"
  ]
}